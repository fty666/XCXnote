
.flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.files {
	width: 100%;
	height: 452rpx;
	background: -webkit-gradient(linear, left bottom, left top, from(rgba(13, 123, 253, 1)), to(rgba(88, 177, 253, 1)));
	background: -o-linear-gradient(bottom, rgba(13, 123, 253, 1), rgba(88, 177, 253, 1));
	background: linear-gradient(0deg, rgba(13, 123, 253, 1), rgba(88, 177, 253, 1));
}
.photo {
	width: 100%;
	height: 265rpx;
	margin-top: 80rpx;
}
.photo image {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	background: #FFFFFF;
	margin: 100rpx 280rpx;
}
.name {
	width: 95%;
	height: 35rpx;
	font-size: 16px;
	font-weight: 500;
	color: rgba(255, 255, 255, 1);
	line-height: 27px;
	text-align: center;
}
.phone {
	width: 95%;
	height: 18rpx;
	font-size: 14px;
	font-weight: 400;
	color: rgba(255, 255, 255, 1);
	line-height: 100rpx;
	text-align: center;
}

/* 故障 */
